{
    "definitions": {},
    "info": {
        "description": "powered by Flasgger",
        "termsOfService": "/tos",
        "title": "A swagger API",
        "version": "0.0.1"
    },
    "paths": {
        "/api/items": {
            "get": {
                "responses": {
                    "200": {
                        "description": "A list of items",
                        "schema": {
                            "items": {
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            },
                            "type": "array"
                        }
                    }
                },
                "summary": "Get all items."
            },
            "post": {
                "parameters": [
                    {
                        "in": "body",
                        "name": "item",
                        "required": true,
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Item added successfully"
                    }
                },
                "summary": "Add a new item."
            }
        },
        "/api/items/{id}": {
            "put": {
                "parameters": [
                    {
                        "in": "body",
                        "name": "item",
                        "required": true,
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Item updated successfully"
                    }
                },
                "summary": "Update an item by ID."
            }
        },
        "/api/items/{item_id}": {
            "delete": {
                "responses": {
                    "200": {
                        "description": "Item removed successfully or not found"
                    }
                },
                "summary": "Remove an item by ID."
            }
        },
        "/test": {
            "get": {
                "responses": {
                    "200": {
                        "description": "Database connection successful"
                    }
                },
                "summary": "Test the database connection."
            }
        }
    },
    "swagger": "2.0"
}